<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.codemail">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/menu_bookshop"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >



        <activity android:name=".LoginActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".CreateAccount"/>

        <activity android:name=".OtpRegister"/>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan|adjustResize"/>

        <activity android:name=".ForgotPassword"/>

        <activity android:name=".SettingActivity"/>
        <activity android:name=".BuyActivity"/>
        <activity android:name=".BookList"/>
        <activity android:name=".sellbooks.SellActivity"
            android:theme="@style/Theme.AppCompat"/>
        <activity android:name=".sellbooks.UploadimageActivity"
            android:theme="@style/Theme.AppCompat"/>
        <activity android:name=".sellbooks.PreviewAd"
            android:theme="@style/Theme.AppCompat"/>

    </application>

</manifest>